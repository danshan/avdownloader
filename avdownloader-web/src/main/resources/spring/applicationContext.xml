<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
                http://www.springframework.org/schema/context
                http://www.springframework.org/schema/context/spring-context-3.2.xsd">

    <context:annotation-config/>
    <context:component-scan base-package="com.shanhh.av"/>

    <context:property-placeholder location="classpath:avdownloader.properties"/>

    <bean id="httpComponent" class="com.shanhh.av.service.tools.CustomHttpComponent" destroy-method="shutdown">
        <constructor-arg index="0" value="${http.max}"/>
        <constructor-arg index="1" value="${http.max.per.route}"/>
        <constructor-arg index="2" value="${http.conn.timeout}"/>
        <constructor-arg index="3" value="${http.so.timeout}"/>
        <constructor-arg index="4" value="false"/>
    </bean>
</beans>